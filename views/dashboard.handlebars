<h2>Your Posts:</h2>

<div class="blog-list">
{{#each blogs as |blog| }}
<div>
    <div>
    <h4>{{blog.title}}</h4>
    <p>Date posted: {{format_date blog.date_created}}</p>
    <p>Posted by: {{user.name}}</p>
    </div>

    <div>
        <p>{{blog.description}}</p>
        <p>{{comments.body}} </p>
    </div>
    <div>
        <button class="btn btn-success btn-sm" data-id="{{blog.id}}">Delete</button>
    </div>
</div>
{{/each}}
</div>
<button type="button" class="btn btn-primary btn-lg" id="add-post">Add Post</button>
<script src="/js/dashboard.js"></script>
<script src="/js/sendToCreate.js"></script>